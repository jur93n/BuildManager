                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="200">
            <TextBlock Text="Вид роботи"/>
            <TextBox Text=""/>
            <TextBlock Text="Виконавець"/>
            <TextBox Text=""/>
            <TextBlock Text="Тривалість"/>
            <TextBox Text=""/>
            <TextBlock Text="Загальна вартість"/>
            <TextBox Text=""/>            
        </StackPanel>
        <Button Grid.Row="1" Content="Додати вид робіт"/>
    </Grid>
</Window>
